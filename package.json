{
  "name": "merkle",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "merkle": "node -r ts-node/register src/merkle-cli.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "commander": "^8.3.0",
    "jest": "^27.2.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.11.6",
    "ts-node": "^10.4.0"
  }
}
